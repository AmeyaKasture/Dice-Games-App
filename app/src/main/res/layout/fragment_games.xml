<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="@android:color/white"
    android:importantForAccessibility="yes">

    <!-- Coins Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="yes">

        <!-- Coins Label -->
        <TextView
            android:id="@+id/coinsLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins:"
            android:textSize="18sp"
            android:textColor="#2E2E2E"
            android:layout_marginRight="8dp"
            android:importantForAccessibility="yes"
            android:contentDescription="Label: Coins" />

        <!-- Coins Balance -->
        <TextView
            android:id="@+id/coinsBalanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textColor="#2E2E2E"
            android:importantForAccessibility="yes"
            android:contentDescription="Coins balance: 0" />
    </LinearLayout>

    <!-- Radio Buttons -->
    <RadioGroup
        android:id="@+id/alikeRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:importantForAccessibility="yes">

        <RadioButton
            android:id="@+id/twoAlikeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Alike"
            android:importantForAccessibility="yes"
            android:contentDescription="2 Alike Radio Button"
            android:focusable="true" />

        <RadioButton
            android:id="@+id/threeAlikeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Alike"
            android:layout_marginLeft="16dp"
            android:importantForAccessibility="yes"
            android:contentDescription="3 Alike Radio Button"
            android:focusable="true" />

        <RadioButton
            android:id="@+id/fourAlikeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Alike"
            android:layout_marginLeft="16dp"
            android:importantForAccessibility="yes"
            android:contentDescription="4 Alike Radio Button"
            android:focusable="true" />
    </RadioGroup>

    <!-- Input and Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:importantForAccessibility="yes">

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:hint="Enter number"
            android:importantForAccessibility="yes"
            android:contentDescription="Input field for numbers" />

        <Button
            android:id="@+id/goButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO"
            android:importantForAccessibility="yes"
            android:contentDescription="Go Button" />
    </LinearLayout>

    <!-- Grid of Numbers -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="24dp"
        android:importantForAccessibility="yes">

        <TextView
            android:id="@+id/num1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="60sp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@android:color/holo_purple"
            android:importantForAccessibility="yes"
            android:textColor="@android:color/white"
            android:contentDescription="Number 6" />

        <TextView
            android:id="@+id/num2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="60sp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@android:color/holo_purple"
            android:importantForAccessibility="yes"
            android:textColor="@android:color/white"
            android:contentDescription="Number 6" />

        <TextView
            android:id="@+id/num3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="60sp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@android:color/holo_purple"
            android:importantForAccessibility="yes"
            android:textColor="@android:color/white"
            android:contentDescription="Number 6" />

        <TextView
            android:id="@+id/num4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="5"
            android:textSize="60sp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@android:color/holo_purple"
            android:importantForAccessibility="yes"
            android:textColor="@android:color/white"
            android:contentDescription="Number 5" />
    </GridLayout>

    <!-- Info Button -->
    <Button
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFO"
        android:layout_marginTop="24dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Information button" />
</LinearLayout>
